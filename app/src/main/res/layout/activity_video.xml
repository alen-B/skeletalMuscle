<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.fjp.skeletalmuscle.viewmodel.state.VideoViewModel" />
        <variable
            name="click"
            type="com.fjp.skeletalmuscle.ui.deviceguidepage.VideoActivity.ProxyClick" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.deviceguidepage.VideoActivity">
        <include
            layout="@layout/layout_title"
            app:viewModel="@{viewModel}" />
        <VideoView
            android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_layout"
            app:layout_constraintBottom_toTopOf="@+id/nextBtn"
            android:layout_height="0dp"/>
        <Button
            android:id="@+id/nextBtn"
            style="@style/SMButtonNext"
            android:layout_width="240dp"
            android:layout_marginBottom="45dp"
            android:text="@string/jump"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            bind:noRepeatClick="@{()-> click.clickJump()}" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>