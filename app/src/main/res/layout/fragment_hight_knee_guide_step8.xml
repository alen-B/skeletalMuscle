<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.fjp.skeletalmuscle.viewmodel.state.HighKneeGuideStep8ViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@drawable/bg_step1"
        android:layout_height="match_parent">
        <include
            layout="@layout/layout_title"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            app:viewModel="@{viewModel}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="93dp" />
        <ImageView
            android:id="@+id/iconIv"
            android:layout_width="516dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/high_knee_guide1_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="318dp"
            tools:ignore="ContentDescription" />
            <TextView
                android:id="@+id/step1Tv"
                android:layout_width="wrap_content"
                android:textSize="46sp"
                android:layout_marginEnd="60dp"
                android:text="@string/high_knee_guide_step1_link_device"
                android:textColor="@color/color_1c1c1c"
                app:layout_constraintEnd_toStartOf="@+id/step2Tv"
                app:layout_constraintTop_toTopOf="@+id/step2Tv"
                android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/step1_1Tv"
            android:layout_width="wrap_content"
            android:textSize="@dimen/text_size_4"
            app:layout_constraintStart_toStartOf="@+id/step1Tv"
            app:layout_constraintTop_toBottomOf="@+id/step1Tv"
            android:layout_marginTop="32dp"
            android:drawablePadding="16dp"
            app:drawableStartCompat="@drawable/high_knee_guide8_connect"
            android:text="@string/exercise_plan_wrist_watch"
            android:textColor="@color/color_332c2c2c"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/step1_2Tv"
            android:layout_width="wrap_content"
            android:textSize="@dimen/text_size_4"
            app:layout_constraintStart_toStartOf="@+id/step1Tv"
            app:layout_constraintTop_toBottomOf="@+id/step1_1Tv"
            android:layout_marginTop="32dp"
            android:drawablePadding="16dp"
            app:drawableStartCompat="@drawable/high_knee_guide8_connect"
            android:text="@string/exercise_plan_left_knee"
            android:textColor="@color/color_332c2c2c"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/step1_3Tv"
            android:layout_width="wrap_content"
            android:textSize="@dimen/text_size_4"
            app:layout_constraintStart_toStartOf="@+id/step1Tv"
            app:layout_constraintTop_toBottomOf="@+id/step1_2Tv"
            android:layout_marginTop="32dp"
            android:drawablePadding="16dp"
            app:drawableStartCompat="@drawable/high_knee_guide8_connect"
            android:text="@string/exercise_plan_right_knee"
            android:textColor="@color/color_332c2c2c"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/step2Tv"
            android:layout_width="wrap_content"
            android:textSize="46sp"
            android:textColor="@color/color_222"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="87dp"
            app:layout_constraintTop_toBottomOf="@+id/title_layout"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/step2_1Tv"
            android:layout_width="wrap_content"
            android:textSize="@dimen/text_size_4"
            app:layout_constraintStart_toStartOf="@+id/step2Tv"
            app:layout_constraintTop_toBottomOf="@+id/step2Tv"
            android:layout_marginTop="32dp"
            app:drawableStartCompat="@drawable/guide1_step2_1"
            android:text="@string/exercise_plan_wrist_watch"
            android:drawablePadding="16dp"
            android:textColor="@color/color_222"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/step2_2Tv"
            android:layout_width="wrap_content"
            android:textSize="@dimen/text_size_4"
            app:layout_constraintStart_toStartOf="@+id/step2Tv"
            app:layout_constraintTop_toBottomOf="@+id/step2_1Tv"
            android:layout_marginTop="32dp"
            android:drawablePadding="16dp"
            app:drawableStartCompat="@drawable/guide1_step2_2"
            android:text="@string/exercise_plan_left_knee"
            android:textColor="@color/color_222"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/step2_3Tv"
            android:layout_width="wrap_content"
            android:textSize="@dimen/text_size_4"
            app:layout_constraintStart_toStartOf="@+id/step2Tv"
            app:layout_constraintTop_toBottomOf="@+id/step2_2Tv"
            android:layout_marginTop="32dp"
            android:drawablePadding="16dp"
            app:drawableStartCompat="@drawable/guide1_step2_2"
            android:text="@string/exercise_plan_right_knee"
            android:textColor="@color/color_222"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>